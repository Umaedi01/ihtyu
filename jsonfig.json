{
  "compilerOptions": {
    "jsx": "react",
    "checkJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "module": "ES2022",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "types",
    "demo",
    "esm",
    "es",
    "build"
  ]
}
